<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <title>Admin Dashboard - ID Card</title>
</head>
<body class="bg-background text-primary-foreground dark:bg-primary dark:text-primary-foreground">
    <div class="container flex">
        <!-- Sidebar -->
        <%- include('../admin-left-bar') %>

        <!-- Main Content -->
        <div class="flex-1 p-6">
            <h2 class="text-2xl font-semibold mb-4">ID Cards</h2>

            <!-- Admin ID Card -->
            <div class="bg-white shadow-md rounded-lg p-4 mb-6">
                <h3 class="font-bold text-xl mb-2">Admin ID Card</h3>
                <div class="flex items-center">
                    <img src="path_to_admin_image.jpg" alt="Admin Image" class="w-24 h-24 rounded-full mr-4">
                    <div>
                        <p><strong>Name:</strong> Admin Name</p>
                        <p><strong>Position:</strong> Admin</p>
                        <p><strong>ID:</strong> A12345</p>
                    </div>
                </div>
            </div>

            <!-- Employee ID Cards -->
            <h3 class="font-bold text-xl mb-4">Employee ID Cards</h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Employee ID Card Example -->
                <div class="bg-white shadow-md rounded-lg p-4">
                    <h4 class="font-bold text-lg">Employee ID Card</h4>
                    <div class="flex items-center">
                        <img src="path_to_employee_image.jpg" alt="Employee Image" class="w-24 h-24 rounded-full mr-4">
                        <div>
                            <p><strong>Name:</strong> John Doe</p>
                            <p><strong>Position:</strong> Software Engineer</p>
                            <p><strong>ID:</strong> E12345</p>
                        </div>
                    </div>
                </div>
                <!-- Add more employee ID cards as necessary -->
                <div class="bg-white shadow-md rounded-lg p-4">
                    <h4 class="font-bold text-lg">Employee ID Card</h4>
                    <div class="flex items-center">
                        <img src="path_to_employee_image2.jpg" alt="Employee Image" class="w-24 h-24 rounded-full mr-4">
                        <div>
                            <p><strong>Name:</strong> Jane Smith</p>
                            <p><strong>Position:</strong> Product Manager</p>
                            <p><strong>ID:</strong> E12346</p>
                        </div>
                    </div>
                </div>
                <!-- Add more employee ID cards as necessary -->
                <div class="bg-white shadow-md rounded-lg p-4">
                    <h4 class="font-bold text-lg">Employee ID Card</h4>
                    <div class="flex items-center">
                        <img src="path_to_employee_image3.jpg" alt="Employee Image" class="w-24 h-24 rounded-full mr-4">
                        <div>
                            <p><strong>Name:</strong> Mike Johnson</p>
                            <p><strong>Position:</strong> UX Designer</p>
                            <p><strong>ID:</strong> E12347</p>
                        </div>
                    </div>
                </div>
                <!-- Add more employee ID cards as necessary -->
            </div>
        </div>
    </div>
    <%- include('../footer') %>
</body>
</html>
