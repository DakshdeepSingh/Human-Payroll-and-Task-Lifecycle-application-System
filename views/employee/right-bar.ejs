                        <div class="flex justify-center items-center p-2 bg-white rounded-lg shadow cursor-pointer hover:bg-blue-100">30</div>
                    </div>
                </div>
            </div>

            <!-- Notifications Section -->
            <div class="bg-gray-100 p-4 rounded-lg shadow-inner">
                <h2 class="flex text-lg font-bold items-center pb-2">
                    <span class="material-symbols-outlined mr-2">
                        info
                    </span>
                    Notifications
                </h2>
                <ul class="space-y-2">
                    <li class="p-2 bg-white rounded-lg shadow cursor-pointer hover:bg-blue-100">
                        <span>Meeting with HR at 3 PM</span>
                    </li>
                    <li class="p-2 bg-white rounded-lg shadow cursor-pointer hover:bg-blue-100">
                        <span>Project deadline is on 10th Oct</span>
                    </li>
                    <li class="p-2 bg-white rounded-lg shadow cursor-pointer hover:bg-blue-100">
                        <span>New training session added</span>
                    </li>
                </ul>
            </div>
        </aside>
    </div>
</body>
</html>